{
  "name": "e-auction-poc",
  "version": "1.0.0",
  "private": true,
  "description": "Minimal E-Auction dApp prototype with Hardhat, Express backend, and Vite React frontend",
  "scripts": {
    "hh:compile": "hardhat compile",
    "hh:test": "hardhat test",
    "hh:node": "hardhat node",
    "hh:deploy:localhost": "hardhat run scripts/deploy_simple.js --network localhost",
    "start:backend": "node backend/index.js",
    "reindex": "node scripts/reindex.js",
    "dev:frontend": "cd frontend && npm install && npm run dev"
